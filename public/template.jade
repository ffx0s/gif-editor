doctype html
html
  head
    meta(charset='utf-8')
    meta(name="keywords" content="GIF 编辑器")
    meta(name="description" content="GIF在线编辑, gif editor")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="mobile-web-app-capable" content="yes")
    meta(name="apple-mobile-web-app-capable" content="yes")
    meta(name="apple-mobile-web-app-status-bar-style" content="white")
    link(rel="shortcut icon" type="image/x-icon" href="//static.webfed.cn/gif/favicon.ico")
    link(rel="apple-touch-icon" href="//static.webfed.cn/gif/gif.png")
    link(rel="dns-prefetch" href="//static.webfed.cn")
    meta(name="viewport", content="width=device-width, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0, user-scalable=no")
    meta(name="format-detection", content="telephone=no")
    meta(name="x5-cache", content="disable")
    meta(http-equiv="expires", content="0")
    meta(http-equiv="Cache-Control", content="no-cache")
    meta(http-equiv="Pragma", content="no-cache")
    link(rel="shortcut icon", href="#{webpackConfig.output.publicPath}favicon.ico")
    title= htmlWebpackPlugin.options.title
    style
      include ../src/assets/css/common/loading.css
  body(style="margin:0")
    noscript
      strong
        | We're sorry but app doesn't work properly without JavaScript enabled. Please enable it to continue.
    #loading.loading.background
      .app-loader
        .app-loader-shadow
        .app-loader-box
    #app